@model Schedule
@using Project_Gym_Asp_Net.Models
@{
    ViewData["Title"] = "CreateSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        
<body style="background-image: url(http://www.glasgiven.com/site/wp-content/uploads/2017/09/PR-Better-Gym-Interior-3.jpg);
        background-size: 100%">
    <div class="container" style="margin-top: 10px;">

        <h1>Create Schedule</h1>

        <hr />
        <div class="row">
            <div class="col-md-6">
                <form style="font-weight: 900;" asp-action="CreateSchedule" asp-controller="Schedule" method="post">
                    <input type="hidden" value="@ViewBag.UserId" name="userId" />

                    <table class="text-warning">
                        <tr>
                            <td>Day:</td>
                            <td><input type="text" name="Schedule.Day" /></td>
                        </tr>
                        <tr>
                            <td>Exercise:</td>
                        </tr>
                    </table>
                    <div>
                        @foreach (Exercise e in ViewBag.Exercises)
                        {
                            <ul>
                                <li>
                                    <input type="checkbox" name="selectedExercises" value="@e.Id" />
                                    @e.ExerciseCategory: - @e.ExerciseName (Approach: @e.CountApproach, Repeats: @e.Repeats )
                                </li>
                            </ul>
                        }
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-lg btn-block" type="submit">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
