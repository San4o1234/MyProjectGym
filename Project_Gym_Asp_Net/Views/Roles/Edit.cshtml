@using Microsoft.AspNetCore.Identity
@model Project_Gym_Asp_Net.ViewModels.ChangeRoleViewModel

@{
    ViewData["Title"] = "Edit";
}
<body style="background-image: url(https://cdn.thespaces.com/wp-content/uploads/2020/01/Gymshark-hero-crop.jpg);
        background-size: 100%">
    <div class="container" style="margin-top: 150px;">
        <br /><br />
        <h2 class="text-warning">Зміна ролей для користувача @Model.UserEmail</h2>
        <hr />
        <form asp-action="Edit" method="post">
            <input type="hidden" name="userId" value="@Model.UserId" />
            <div class="form-group">
                @foreach (IdentityRole role in Model.AllRoles)
                {
                    <input type="checkbox" name="roles" value="@role.Name"
                           @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                    }
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</body>